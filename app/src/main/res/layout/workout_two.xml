<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/coordinatorLayout"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:orientation="vertical" android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  app:layout_collapseParallaxMultiplier="1.0"
                  android:layout_marginTop="50px"
                  android:baselineAligned="false"
                  android:layout_gravity="center"
                  android:weightSum="1">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.18"
            android:columnCount="3"
            android:stretchColumns="0,1,2">
            <TableRow android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/OHPressID"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Over Head Press"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/OHPWeightID"

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="0.0 kg"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_margin="10dp">

                <ToggleButton
                    android:id="@+id/OHP1"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Set 1"
                    android:textColor="#ffffffff"
                    android:textOff="SET 1"
                    android:textOn="SET 1"
                    android:textSize="15sp"/>

                <ToggleButton
                    android:id="@+id/OHP2"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Set 2"
                    android:textColor="#FFFFFF"
                    android:textOff="SET 2"
                    android:textOn="SET 2"
                    android:textSize="15sp"/>

                <ToggleButton
                    android:id="@+id/OHP3"
                    android:layout_width="0dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape"
                    android:elevation="0dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Set 3"
                    android:textColor="#FFFFFF"
                    android:textOff="SET 3"
                    android:textOn="SET 3"
                    android:textSize="15sp"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.18"
            android:columnCount="3"
            android:stretchColumns="0,1,2">
            <TableRow android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ChinID"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Chin Ups"
                    android:textAlignment="center"/>


                <TextView
                    android:id="@+id/ChinUPWeightID"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="0.0 kg"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_margin="10dp">

                <ToggleButton
                    android:id="@+id/Chin1"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Set 1"
                    android:textColor="#FFFFFF"
                    android:textOff="SET 1"
                    android:textOn="SET 1"
                    android:textSize="15sp"/>

                <ToggleButton
                    android:id="@+id/Chin2"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Set 2"
                    android:textColor="#FFFFFF"
                    android:textOff="SET 2"
                    android:textOn="SET 2"
                    android:textSize="15sp"/>

                <ToggleButton
                    android:id="@+id/Chin3"
                    android:layout_width="0dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape"
                    android:elevation="0dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Set 3"
                    android:textColor="#FFFFFF"
                    android:textOff="SET 3"
                    android:textOn="SET 3"
                    android:textSize="15sp"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.18"
            android:columnCount="3"
            android:stretchColumns="0,1,2">
            <TableRow android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/DeadLiftID"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Dead Lift"
                    android:textAlignment="center"/>


                <TextView
                    android:id="@+id/DeadLiftWeightID"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="0.0 kg"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_margin="10dp">

                <ToggleButton
                    android:id="@+id/DeadLift1"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Set 1"
                    android:textColor="#FFFFFF"
                    android:textOff="SET 1"
                    android:textOn="SET 1"
                    android:textSize="15sp"/>

            </TableRow>

        </TableLayout>

        <Button
            android:text="Finish"
            android:background="@drawable/buttonshapenormal"
            android:textColor="#FFFFFF"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/finishButtonID"
            android:layout_weight="0.18"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="20sp" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>