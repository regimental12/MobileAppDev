<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.indievoodoo.richard.weightliftingtracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_wightliftingicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- android:fullBackupContent="@xml/backUpRules"> -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".WorkoutOne"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".WorkoutTwo"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".SetUpWeights"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".ChartActivity">
        </activity>
        <activity android:name=".HelpMenu">
        </activity>
        <activity android:name=".About">
        </activity>
    </application>

</manifest>